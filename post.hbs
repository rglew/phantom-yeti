                </div>

            <div class="large-6 columns author-meta">
                {{#if author}}
                      <section class="row">
                        <h4>About the Author</h4>
                        <div class="large-3 columns">
                          {{#if author.image}}
                            <div class="author-img">
                              <img src="{{author.image}}" itemprop="image" />
                            </div>
                          {{/if}}
                        </div>
                        <div class="large-9 columns">
                          <h5 class="author-name subheader" itemprop="author">{{author.name}}</h5>
                          {{#if author.website}}
                            <a class="author-url" href="{{author.website}}" itemprop="url">{{author.website}}</a>
                            {{/if}}
                          <p class="author-bio">{{author.bio}}</p>
                        </div>
                      </section>
                {{/if}}
            </div>

        </footer>
        
        {{/post}}

    </article>

